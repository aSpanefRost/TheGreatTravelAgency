<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="6dp"
        app:cardCornerRadius="18dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/teal_300"
            android:padding="24dp">

            <TextView
                android:id="@+id/tv_passenger_activity_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="28dp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tv_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cost: "
                android:textColor="@color/black"
                android:textSize="28dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/tv_passenger_activity_name"
                app:layout_constraintHorizontal_bias="0.5"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tv_passenger_activity_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="28dp"
                app:layout_constraintTop_toBottomOf="@id/tv_passenger_activity_name"
                app:layout_constraintLeft_toRightOf="@+id/tv_cost"
                android:layout_marginLeft="5dp"
                tools:ignore="MissingConstraints" />
            <TextView
                android:id="@+id/tv_spaces_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spaces:"
                android:textColor="@color/black"
                android:textSize="28dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/tv_cost"
                app:layout_constraintHorizontal_bias="0.5"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tv_passenger_activity_spaces"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="28dp"
                app:layout_constraintTop_toBottomOf="@id/tv_passenger_activity_cost"
                app:layout_constraintLeft_toRightOf="@+id/tv_spaces_left"
                android:layout_marginLeft="5dp"
                tools:ignore="MissingConstraints" />
            <CheckBox
                android:id="@+id/tv_passenger_activity_checkbox"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:button="@null"
                android:background="?android:attr/listChoiceIndicatorMultiple"
                app:layout_constraintRight_toRightOf="parent"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>